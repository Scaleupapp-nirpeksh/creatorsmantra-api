{
  "name": "creatorsmantra-api",
  "version": "1.0.0",
  "description": "Professional business management platform for content creators - Backend API",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit --detectOpenHandles --forceExit",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration --detectOpenHandles --forceExit",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "seed": "node src/utils/seed.js",
    "migrate": "node src/utils/migrate.js",
    "validate:env": "node src/config/environment.js --validate"
  },
  "keywords": [
    "creators",
    "influencer",
    "management",
    "crm",
    "invoice",
    "api"
  ],
  "author": "CreatorsMantra",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^7.0.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "aws-sdk": "^2.1492.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "axios": "^1.6.0",
    "nodemailer": "^6.9.7",
    "handlebars": "^4.7.8",
    "pdfkit": "^0.14.0",
    "puppeteer": "^21.5.0",
    "razorpay": "^2.9.2",
    "openai": "^4.17.4",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "bull": "^4.11.4",
    "agenda": "^5.0.0",
    "crypto-js": "^4.2.0",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.6",
    "xlsx": "^0.18.5",
    "csv-parse": "^5.5.2",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/node": "^20.9.0",
    "@faker-js/faker": "^8.3.1",
    "mongodb-memory-server": "^9.0.1",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/config/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 20000
  }
}