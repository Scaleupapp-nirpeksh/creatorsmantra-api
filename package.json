{
  "name": "creatorsmantra-api",
  "version": "1.0.0",
  "description": "CreatorsMantra Backend API - Creator Economy Management Platform",
  "main": "server.js",
"scripts": {
    "dev": "node --max-old-space-size=2048 --expose-gc --optimize-for-size server.js",
    "start": "node --max-old-space-size=4096 --expose-gc --optimize-for-size server.js",
    "start:production": "node --max-old-space-size=8192 --expose-gc --optimize-for-size server.js",
    "test": "node --max-old-space-size=2048 --expose-gc jest",
    "memory-check": "node -e \"console.log('Heap Total:', Math.round(process.memoryUsage().heapTotal / 1024 / 1024), 'MB')\"",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "creator",
    "influencer",
    "management",
    "api"
  ],
  "author": "CreatorsMantra Team",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1500.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.10.0",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^2.10.0",
    "newman": "^6.2.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.4",
    "openai": "^4.0.0",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.13.0",
    "puppeteer": "^21.0.3",
    "qrcode": "^1.5.4",
    "razorpay": "^2.9.2",
    "twilio": "^5.8.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
